{
  "id": "modern-agile-workflow",
  "name": "Modern Agile Workflow",
  "description": "A modern agile workflow based on real Jira usage patterns",
  "states": [
    {
      "id": "to_do",
      "name": "To Do",
      "isInitial": true,
      "isFinal": false,
      "enabled": true,
      "description": "Initial state for new work items"
    },
    {
      "id": "in_progress",
      "name": "In Progress",
      "isInitial": false,
      "isFinal": false,
      "enabled": true,
      "description": "Work is being actively developed"
    },
    {
      "id": "qa_ready",
      "name": "QA Ready",
      "isInitial": false,
      "isFinal": false,
      "enabled": true,
      "description": "Development complete, ready for testing"
    },
    {
      "id": "testing",
      "name": "Testing",
      "isInitial": false,
      "isFinal": false,
      "enabled": true,
      "description": "Currently being tested by QA"
    },
    {
      "id": "blocked",
      "name": "Blocked",
      "isInitial": false,
      "isFinal": false,
      "enabled": true,
      "description": "Work is blocked and cannot proceed"
    },
    {
      "id": "done",
      "name": "Done",
      "isInitial": false,
      "isFinal": true,
      "enabled": true,
      "description": "Work completed successfully"
    },
    {
      "id": "cancelled",
      "name": "Cancelled",
      "isInitial": false,
      "isFinal": true,
      "enabled": true,
      "description": "Work was cancelled and will not be completed"
    }
  ],
  "actions": [
    {
      "id": "start_work",
      "name": "Start Work",
      "enabled": true,
      "fromStates": ["to_do"],
      "toState": "in_progress",
      "description": "Begin working on the task"
    },
    {
      "id": "ready_for_qa",
      "name": "Ready for QA",
      "enabled": true,
      "fromStates": ["in_progress"],
      "toState": "qa_ready",
      "description": "Development is complete and ready for testing"
    },
    {
      "id": "start_testing",
      "name": "Start Testing",
      "enabled": true,
      "fromStates": ["qa_ready"],
      "toState": "testing",
      "description": "Begin testing the completed work"
    },
    {
      "id": "pass_testing",
      "name": "Pass Testing",
      "enabled": true,
      "fromStates": ["testing"],
      "toState": "done",
      "description": "Testing passed, work is complete"
    },
    {
      "id": "fail_testing",
      "name": "Fail Testing",
      "enabled": true,
      "fromStates": ["testing"],
      "toState": "in_progress",
      "description": "Testing failed, needs more development"
    },
    {
      "id": "block_work",
      "name": "Block",
      "enabled": true,
      "fromStates": ["in_progress", "qa_ready"],
      "toState": "blocked",
      "description": "Work is blocked and cannot proceed"
    },
    {
      "id": "unblock_work",
      "name": "Unblock",
      "enabled": true,
      "fromStates": ["blocked"],
      "toState": "in_progress",
      "description": "Block is resolved, work can continue"
    },
    {
      "id": "cancel_work",
      "name": "Cancel",
      "enabled": true,
      "fromStates": ["to_do", "in_progress", "blocked"],
      "toState": "cancelled",
      "description": "Cancel the work item"
    },
    {
      "id": "reopen_work",
      "name": "Reopen",
      "enabled": true,
      "fromStates": ["done"],
      "toState": "to_do",
      "description": "Reopen completed work for additional changes"
    }
  ]
} 